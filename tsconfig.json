{
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true,
    "module": "commonjs",
    "target": "ES2019",
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,
    "baseUrl": ".",
    "lib": [
      "ES5",
      "ES2015.Promise",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ]
  },
  "include": [
    "src/**/*","tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}